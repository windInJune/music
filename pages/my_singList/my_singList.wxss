page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color:#f2f2f2;
}
.mysinglist{
  height: 100%;
}
.singlistnum{
  height:74rpx;
  width: 100%;
  background: rgba(242,242,242,1);
  line-height:74rpx;
  font-size:14px;
  text-indent:16px;
  color:rgba(190,194,201,1);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99
}
.tab{
  width:100%;
  height: 70rpx;
  background-color:#FF633A;
  overflow: hidden;
  font-size: 34rpx;
  color: #fff;
  position: fixed;
  top: 0rpx;
  left: 0;
}
.tab .left{
  width: 50%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  opacity: 0.8;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}
.tab .right{
  width: 50%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  opacity: 0.8;
  position: absolute;
  top: 0;
  left: 50%;
  z-index: 2;
}
.tab .checked{
  /* border-bottom: 6rpx solid #fff; */
  opacity: 1;
}
 @keyframes toL{ 
  0%{left: 50%;}
	100%{left: 0;}
}
@keyframes toR{ 
  0%{left: 0;}
	100%{left: 50%;}
}
.tab .block{
  display: none;
  width: 20%;
  margin: 0 15%;
  height: 64rpx;
  border-bottom: 6rpx solid #fff;
  position: absolute;
  top: 0;
  z-index: 1;
}
.tab .toL{
  display: block;
  animation:toL 0.3s linear;
}
.tab .toR{
  display: block;
  animation:toR 0.3s linear;
} 
.list{
  width:100%;
  background: #fff;
  padding:0 30rpx;
  box-sizing: border-box;
  position: relative;
}
.list .title{
  font-size: 30rpx;
  color: #a1a1a1;
}
.theOne{
  width: 690rpx;
  padding: 30rpx 0;
  overflow: hidden;
  background: #fff; 
  border-bottom: 1rpx solid #f2f2f2;
  position: relative;
}
.theOne .img{
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin-right: 37rpx;
}
.theOne .name{
