.footer_player{
  width: 100%;
  height: 130rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 0rpx 5rpx #eee;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
}
@keyframes singer{ 
  0%{
		transform: rotate(0deg);
	}
	100%{
		transform: rotate(360deg);
	}
}
.footer_player .singer_cover{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border:10rpx solid #fff;
  overflow: hidden;
  box-shadow: 5rpx 7rpx 10rpx #eee;
  background: #fff;
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
}
.footer_player .singer_cover image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  animation:singer 10s linear infinite;
}
.footer_player .controls{
  width: 590rpx;
  height: 100%;
  padding: 20rpx 30rpx 20rpx 20rpx;
  box-sizing: border-box;
  position: absolute;
  right: 0;
}
.footer_player .singer_info{
  width: 350rpx;
  font-size: 34rpx;
  padding: 10rpx 0;
  float: left;
  /* background-color: #f99; */
}
.footer_player .sing_name{
  font-size: 32rpx;
  color: #FF633A;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.footer_player .singer_name{
  font-size: 24rpx;
  color: #333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.footer_player .btn{
  width: 180rpx;
  height: 100rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}
.footer_player .btn .playBtn{
  width: 68rpx;
  height: 68rpx;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -34rpx;
  
}
.footer_player .btn .showListIcon{
  width: 47rpx;
  height: 52rpx;
   position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -26rpx;
}