page{
  background: #F2F2F2;
}
.textBox{
  width: 690rpx;
  margin:20rpx 30rpx;
  padding: 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  height: 485rpx;
  background-color: #fff;
}
.textBox textarea{
  width: 100%;
  height: 400rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
  color: #000;  
}
.tip{
  width: 100%;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}
.submit{
  width:692rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #FF633A;
  color: #fff;
  margin: 80rpx auto 50rpx;
}